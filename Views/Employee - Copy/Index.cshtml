@using Demo.DAL.Models;
 @model IEnumerable<Departments> 
@{
    ViewData["Title"] = "All Departments";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary" >Create New Department</a>

@if (Model.Count()>0)
{
    <table class="mt-3 table table-striped table-hover" >
        <thead>
            <tr>
                <td @Html.DisplayNameFor(D=>D.Code)></td>
                <td @Html.DisplayNameFor(D=>D.Name)></td>
                <td @Html.DisplayNameFor(D=>D.DateOfCreation)></td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation.Date</td>
                    <td>
                        <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.ID" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Details
                        </a>

                    </td>
                    <td>
                        <a asp-controller="Departments" asp-action="Edit" asp-route-id="@department.ID" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>

                    </td>
                    <td>
                        <a asp-controller="Departments" asp-action="Delete" asp-route-id="@department.ID" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else 
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Departments!</h3>
    </div>

}

